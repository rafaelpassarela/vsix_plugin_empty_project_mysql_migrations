<UserControl x:Class="ApiGenerator.ToolWindows.ApiConfigToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ApiGenerator.ToolWindows"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DockPanel HorizontalAlignment="Right" LastChildFill="False" VerticalAlignment="Top" Width="800" Height="40" Background="#FF3E3E42">
            <Button x:Name="btnRefresh" Content="Refresh" Click="Button_Click" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Background="#FFDDDDDD" />
            <Label x:Name="lblProjectName" Content="Project Name" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="White"/>
        </DockPanel>
    </Grid>
</UserControl>
